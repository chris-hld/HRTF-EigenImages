# Call:  plt.style.use(['CFH', ...])

# Figure
figure.dpi       : 100

# Lines
lines.linewidth: 2
lines.solid_capstyle: butt  # end right at the data points
lines.antialiased : True    # render lines in antialiased (no jaggies)

# Patches
patch.linewidth: 0.5
patch.facecolor: 348ABD  # blue
patch.edgecolor: EEEEEE
patch.antialiased : True    # render patches in antialiased (no jaggies)

# Legend
legend.fancybox: true  # round edges
legend.framealpha    : 0.6

# Axis
axes.facecolor: f8f8f8
axes.edgecolor: c3c3c3
axes.linewidth: 1.5  # edge linewidth
axes.grid: True
axes.titlesize: x-large
axes.labelsize: large
axes.labelcolor: 555555
axes.axisbelow: True # grid/ticks are below elements (e.g., lines, text)

