axes.prop_cycle: cycler('color', ['E24A33', '348ABD', '8EBA42', 'FBC15E', '777777', '988ED5', 'FFB5B8'])
# BMH colors
#axes.prop_cycle: cycler('color', ['348ABD', 'A60628', '7A68A6', '467821', 'D55E00', 'CC79A7', '56B4E9', '009E73', 'F0E442', '0072B2'])

xtick.color: 555555
xtick.direction: out
ytick.color: 555555
ytick.direction: out

axes.spines.left   : True   # display axis spines
axes.spines.bottom : True
axes.spines.top    : False
axes.spines.right  : False

# Grid
grid.alpha : 0.8      # transparency, between 0.0 and 1.0
grid.color: cbcbcb    # grid color
grid.linewidth: 0.8
grid.linestyle: :     # dotted
